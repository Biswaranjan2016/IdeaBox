<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.happy934.tempideabox.TripToMyIdea">

    <LinearLayout
        android:background="@drawable/border"
        android:padding="4dp"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--This immediate child (first) of parent layout holds the layout for to date layout-->
        <LinearLayout
            android:id="@+id/toDateLayout"
            android:background="@drawable/grey_border"
            android:layout_marginBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/toDate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".70"
                android:hint="@string/to_date"
                android:padding="4dp"
                android:textSize="20sp"/>

            <ImageButton
                android:id="@+id/toImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_date_black_24dp"/>
        </LinearLayout>

        <!--The immediate child (second) of parent holds the layout for From date-->
        <LinearLayout

            android:id="@+id/fromDateLayout"
            android:background="@drawable/grey_border"
            android:layout_marginBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fromDate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".70"
                android:hint="@string/from_date"
                android:padding="4dp"
                android:textSize="20sp"/>
            <ImageButton
                android:id="@+id/fromImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_date_black_24dp"/>

        </LinearLayout>

        <!--The immediate child (third) of the parent holds the layout to input tags-->
        <LinearLayout

            android:id="@+id/tags"
            android:layout_marginBottom="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/tags"
                android:padding="4dp"
                android:textSize="20sp"
                android:background="@drawable/grey_border"/>

        </LinearLayout>

        <!--This layout element lays out the button-->
        <RelativeLayout
            android:id="@+id/submit_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/button2"
                android:background="@drawable/grey_border"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/submit"
                android:textAllCaps="false"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
